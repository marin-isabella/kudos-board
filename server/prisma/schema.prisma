           // title: 'Thanks for your help!'

model Board {
  id          Int     @id @default(autoincrement())
  image       String
  kudosType   String
  title       String
  cards      Card[]
}

model Card {
  id          Int     @id @default(autoincrement())
  title       String
  image       String
  voteCount   Int
  board       Board @relation(fields: [boardId], references: [id])
  boardId     Int
}
